{
  "diagnostic.displayByAle": false,
  "coc.preferences.previewAutoClose": false,
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "filetypes": [
        "c",
        "cc",
        "cpp",
        "h",
        "hpp",
        "hxx"
      ],
      "rootPatterns": [
        ".clangd-root",
        ".clangd",
        "compile_commands.json",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": ".clangd-cache"
        },
        "highlight": {
          "lsRanges": true
        }
      }
    }
  },
  "python.jediEnabled": false,
  "python.formatting.provider": "black"
}
