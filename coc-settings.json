{
  "diagnostic.displayByAle": false,
  "coc.preferences.previewAutoClose": false,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
      ],
      "rootPatterns": [
        ".ccls-root",
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls-cache"
        },
        "highlight": {
          "lsRanges": true
        }
      }
    }
  },
  "python.jediEnabled": false,
  "python.formatting.provider": "black"
}
