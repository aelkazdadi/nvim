{
  "diagnostic.displayByAle": true,
  "coc.preferences.previewAutoClose": false,
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "args": ["--background-index", "--completion-style=detailed", "--pch-storage=memory"],
      "rootPatterns": [".clangd", "compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/clangd-cache"
        }
      }
    }
  },
  "python.jediEnabled":false,
  "python.formatting.provider": "black"
}
